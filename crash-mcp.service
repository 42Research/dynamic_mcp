[Unit]
Description=Crash MCP Server - Crash Dump Analysis Service
Documentation=https://github.com/ablagodarenko/crash-mcp
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=crash-mcp
Group=crash-mcp
WorkingDirectory=/opt/crash-mcp

# Service execution
ExecStart=/usr/local/bin/crash-mcp-http
ExecReload=/bin/kill -HUP $MAINPID
ExecStop=/bin/kill -TERM $MAINPID

# Restart policy
Restart=on-failure
RestartSec=5s
StartLimitInterval=60s
StartLimitBurst=3

# Environment variables
Environment="PORT=8080"
Environment="LOG_LEVEL=INFO"
Environment="PYTHONUNBUFFERED=1"

# Tunnel integration - MCP_SERVER_URL will be set via systemctl set-environment or EnvironmentFile
# EnvironmentFile=/etc/crash-mcp/crash-mcp.env

# Process management
KillMode=mixed
KillSignal=SIGTERM
TimeoutStopSec=10s

# Security and isolation
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/crash-dumps /var/log/crash-mcp

# Resource limits
LimitNOFILE=65536
LimitNPROC=4096

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=crash-mcp

[Install]
WantedBy=multi-user.target

